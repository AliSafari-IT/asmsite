{
  "compilerOptions": {
    "baseUrl": ".",
    "composite": true,
    "jsx": "react-jsx",
    "noImplicitAny": true,
    "strict": true,
    "target": "es2020",
    "module": "esnext",
    "moduleResolution": "node",
    "lib": ["dom", "dom.iterable", "esnext"],
    "esModuleInterop": true,
    "skipLibCheck": true,
    "types": ["vitest", "vitest/globals", "vitest/importMeta"],
    "resolveJsonModule": true,
    "declaration": true
  },
  "files": [],
  "include": ["*.ts", "*.tsx"],
  "exclude": [
    "node_modules",
    "dist",
    "**/*.spec.ts",
    "**/*.spec.tsx"
  ],
  "extends": "../tsconfig.base.json"
}